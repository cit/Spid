# Makefile

## program paths and flages for the compiler
CC      = /usr/bin/g++
RM      = /bin/rm
CP      = /bin/cp
CFLAGES = -Wall -Winit-self -march=i386 -ansi -pedantic
LIBS    = -lpcap
STRIP   = /usr/bin/strip

## files
SRC_DIR = src
SOURCES = \
	  $(SRC_DIR)/*.cpp \
	  $(SRC_DIR)/Flow/*.cpp \
	  $(SRC_DIR)/Flow/*.h \
	  $(SRC_DIR)/Ip/*.cpp \
	  $(SRC_DIR)/Ip/*.h

## names
NAME   = spid

$(NAME):
	$(CC) $(CFLAGES) $(LIBS) $(SOURCES) -o $(NAME)
	$(STRIP) $(NAME)

clean:
	$(RM) -rf $(NAME)

